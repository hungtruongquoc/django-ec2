option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: backend.wsgi:application

files:
  "/tmp/static.conf":
    mode: "000644"
    owner: "root"
    group: "root"
    content: |
      location /static/ {
          alias /var/app/current/staticfiles;
      }

      location /media/ {
          alias /var/app/current/media;
      }

commands:
  01_update_nginx_config:
    command: "cat /tmp/static.conf >> /etc/nginx/conf.d/elasticbeanstalk/00_application.conf && rm /tmp/static.conf"